<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout style="@style/ActivityBG">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/Line_10"/>

            <LinearLayout
                style="@style/ActivityBG"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/ll_fingerprintManage"
                    style="@style/Item_52"
                    android:onClick="settingClick">

                    <TextView
                        style="@style/TitleText"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/fingerprint_manage" />

                    <ImageView style="@style/Arrow_Right" />

                </LinearLayout>

                <View style="@style/Line" />

                <LinearLayout
                    android:id="@+id/ll_cardManage"
                    style="@style/Item_52"
                    android:onClick="settingClick">

                    <TextView
                        style="@style/TitleText"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/card_manage" />

                    <ImageView style="@style/Arrow_Right" />

                </LinearLayout>

                <View style="@style/Line" />

                <LinearLayout
                    android:id="@+id/ll_passwordManage"
                    style="@style/Item_52"
                    android:onClick="settingClick">

                    <TextView
                        style="@style/TitleText"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/password_manage" />

                    <ImageView style="@style/Arrow_Right" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/Line" />

            <View style="@style/Line_10"/>

            <LinearLayout
                style="@style/ActivityBG"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">>

                <LinearLayout style="@style/Item_52">

                    <TextView
                        style="@style/TitleText"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/keypad_voice" />

                    <so.voc.vhome.widget.SwitchButton
                        android:id="@+id/sb_keypadVoice"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <View style="@style/Line" />

                <LinearLayout style="@style/Item_52">

                    <TextView
                        style="@style/TitleText"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/safe_mode" />

                    <so.voc.vhome.widget.SwitchButton
                        android:id="@+id/sb_safeMode"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <View style="@style/Line" />

                <LinearLayout style="@style/Item_52">

                    <TextView
                        style="@style/TitleText"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/card_opening" />

                    <so.voc.vhome.widget.SwitchButton
                        android:id="@+id/sb_cardOpening"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <View style="@style/Line" />

            </LinearLayout>

            <View style="@style/Line_10"/>

            <LinearLayout
                android:id="@+id/ll_deviceInfo"
                style="@style/Item_52"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:onClick="settingClick">

                <TextView
                    style="@style/TitleText"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/device_info" />

                <ImageView style="@style/Arrow_Right" />

            </LinearLayout>


            <View style="@style/Line"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_unbind"
            android:background="@drawable/btn_red_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:onClick="settingClick"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/colorRed"
            android:text="@string/unbind"
            style="@style/Button"/>

    </RelativeLayout>

</layout>