<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/ActivityBG">

        <View style="@style/Line_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/ll_headIcon"
                style="@style/Item_52"
                android:onClick="personalClick"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TitleText"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/head_icon"/>
                
                <so.voc.vhome.widget.CircleImageView
                    android:id="@+id/iv_headIcon"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38"
                    android:src="@drawable/ic_avatar"/>

                <ImageView
                    style="@style/Arrow_Right"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

            <View style="@style/Line"/>

            <LinearLayout
                android:id="@+id/ll_nickName"
                style="@style/Item_52"
                android:onClick="personalClick"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TitleText"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/nick_name"/>

                <TextView
                    android:id="@+id/tv_nickName"
                    style="@style/ItemText"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    style="@style/Arrow_Right"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

            <View style="@style/Line"/>

            <LinearLayout
                android:id="@+id/ll_phone"
                style="@style/Item_52"
                android:onClick="personalClick"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TitleText"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/phone"/>

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/ItemText"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    style="@style/Arrow_Right"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

            <View style="@style/Line"/>
        </LinearLayout>

    </LinearLayout>

</layout>